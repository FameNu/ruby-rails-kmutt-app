<p style="color: green"><%= notice %></p>

<% content_for :title, "Todos" %>

<div class="flex justify-between items-center">
  <h1 class="text-3xl font-bold">Todos</h1>
  <%= link_to "New todo", new_todo_path, class:"btn" %>
</div>

<div id="todos">
  <% @todos.each do |todo| %>
    <%= render todo %>
    <p>
      <%= link_to "Show this todo", todo %>
    </p>
  <% end %>
</div>
